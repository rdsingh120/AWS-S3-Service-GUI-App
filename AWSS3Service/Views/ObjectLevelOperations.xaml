<Window x:Class="AWSS3Service.ObjectLevelOperations"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AWSS3Service"
        mc:Ignorable="d"
        Loaded="Window_Loaded"
        Title="Object Level Operations" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0" Margin="10 20 10 0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Label Grid.Column="0" Content="Bucket" FontSize="18" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                <ComboBox Grid.Column="1" Name="BucketComboBox" HorizontalAlignment="Stretch" Height="40" FontSize="18" VerticalAlignment="Center" 
                          VerticalContentAlignment="Center" Margin="5 0 5 0" DisplayMemberPath="BucketName" SelectedValuePath="BucketName" 
                          IsEditable="True" IsReadOnly="True" Text="--- Select a bucket ---" SelectionChanged="BucketComboBox_SelectionChanged"/>
            </Grid>
            <Grid Grid.Row="1" Margin="10 20 10 0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Label Grid.Column="0" Content="Object" FontSize="18" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                <Border Grid.Column="1" BorderBrush="Gray" BorderThickness="1" Padding="4" Height="40" Margin="5 0 5 0">
                    <TextBlock Name="ObjectTextBlock" FontSize="18" Padding="5" HorizontalAlignment="Stretch" Height="40"  VerticalAlignment="Center" Margin="5 0 5 0"/>
                </Border>

                    
            </Grid>
            <DataGrid Grid.Row="2" Name="ObjectDataGrid" Margin="10 20 10 10" AutoGenerateColumns="False" SelectionMode="Single" SelectionUnit="FullRow" IsReadOnly="True">
                <DataGrid.ColumnHeaderStyle>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="FontSize" Value="18"/>
                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                    </Style>
                </DataGrid.ColumnHeaderStyle>
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Object Name" Binding="{Binding Key}" Width="*">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="FontSize" Value="16"/>
                                <Setter Property="Padding" Value="15,0,0,0"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="Size (Bytes)" Binding="{Binding Size}" Width="*">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="FontSize" Value="16"/>
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
        <Grid Grid.Column="1" Margin="0 0 5 10">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Button Grid.Row="1" Name="BrowseButton" Content="Browse" FontSize="18" Height="40" Width="200" Click="BrowseButton_Click"/>
            <Button Grid.Row="2" Name="UploadButton" Content="Upload" FontSize="18" Height="40" Width="200" Click="UploadButton_Click"/>
            <Button Grid.Row="3" Name="DownloadButton" Content="Download" FontSize="18" Height="40" Width="200" Click="DownloadButton_Click"/>
            <Button Grid.Row="4" Name="DeleteButton" Content="Delete" FontSize="18" Height="40" Width="200" Click="DeleteButton_Click"/>
            <Button Grid.Row="5" Name="BackButton" Content="Back to Main Window" FontSize="18" Height="40" VerticalAlignment="Bottom" Width="200" Click="BackButton_Click"/>
        </Grid>
    </Grid>
</Window>
