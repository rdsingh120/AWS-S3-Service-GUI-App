<Window x:Class="AWSS3Service.BucketLevelOperations"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AWSS3Service"
        xmlns:userControls="clr-namespace:AWSS3Service.UserControls"
        mc:Ignorable="d"
        Title="Bucket Level Operations" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <userControls:CreateBucketSection x:Name="CreateBucketSectionControl" Grid.Row="0" Margin="20 20 20 10"/>
        <userControls:ViewAndDeleteBucketSection x:Name="ViewAndDeleteSectionControl" Grid.Row="1" Margin="20 0 20 0"/>
        <Button Grid.Row="2" Name="BackButton" Content="Back To Main Window" FontSize="18" Height="35" HorizontalAlignment="Stretch" Click="BackButton_Click" Width="500" Margin="0 10 0 10"/>
    </Grid>
</Window>
