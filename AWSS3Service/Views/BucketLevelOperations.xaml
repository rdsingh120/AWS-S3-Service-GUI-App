<Window x:Class="AWSS3Service.BucketLevelOperations"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AWSS3Service"
        mc:Ignorable="d"
        Loaded="Window_Loaded"
        Title="Bucket Level Operations" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Margin="20 20 20 10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Label Grid.Column="0" Content="Bucket Name" FontSize="18" HorizontalAlignment="Right" VerticalAlignment="Center"/>
            <TextBox Grid.Column="1" Name="BucketNameTextBox" FontSize="18" Padding="5" HorizontalAlignment="Stretch" Height="40"  VerticalAlignment="Center" Margin="5 0 5 0"/>
            <Button Grid.Column="2" Name="CreateBucketButton" Content="Create Bucket" FontSize="18" Height="40" Width="200" Click="CreateBucketButton_Click"/>
        </Grid>
        <Grid Grid.Row="1" Margin="20 0 20 0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Button Grid.Row="0" Name="DeleteBucketButton" Content="Delete Bucket" FontSize="18" Height="40" Width="200" HorizontalAlignment="Right" Margin="0 0 0 5" Click="DeleteBucketButton_Click"/>
            <DataGrid Grid.Row="1" Name="BucketsDataGrid" AutoGenerateColumns="False" SelectionMode="Single" SelectionUnit="FullRow">
                <DataGrid.ColumnHeaderStyle>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="FontSize" Value="18"/>
                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                    </Style>
                </DataGrid.ColumnHeaderStyle>
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Bucket Name" Binding="{Binding BucketName}"  Width="*">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="FontSize" Value="16"/>
                                <Setter Property="Padding" Value="15,0,0,0"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="Date Created" Binding="{Binding CreationDate}" Width="*">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="FontSize" Value="16"/>
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
        <Button Grid.Row="2" Name="BackButton" Content="Back To Main Window" FontSize="18" Height="35" HorizontalAlignment="Stretch" Click="BackButton_Click" Width="500" Margin="0 10 0 10"/>

    </Grid>
</Window>
