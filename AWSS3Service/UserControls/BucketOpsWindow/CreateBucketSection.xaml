<UserControl x:Class="AWSS3Service.UserControls.CreateBucketSection"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AWSS3Service.UserControls"
             mc:Ignorable="d" 
             d:Height="Auto" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Label Grid.Column="0" Content="Bucket Name" FontSize="18" HorizontalAlignment="Right" VerticalAlignment="Center"/>
        <TextBox Grid.Column="1" Name="BucketNameTextBox" FontSize="18" Padding="5" HorizontalAlignment="Stretch" Height="40"  VerticalAlignment="Center" Margin="5 0 5 0"/>
        <Button Grid.Column="2" Name="CreateBucketButton" Content="Create Bucket" FontSize="18" Height="40" Width="200" Click="CreateBucketButton_Click"/>
    </Grid>
</UserControl>
