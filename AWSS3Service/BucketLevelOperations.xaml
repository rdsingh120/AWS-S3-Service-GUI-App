<Window x:Class="AWSS3Service.BucketLevelOperations"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AWSS3Service"
        mc:Ignorable="d"
        Title="Bucket Level Operations" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Label Grid.Column="0" Content="Bucket Name" FontSize="20" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="50 0 0 0"/>
            <TextBox Grid.Column="1" Name="BucketNameTextBox" FontSize="20" Padding="5" HorizontalAlignment="Stretch" Height="40"  VerticalAlignment="Center" Margin="5 0 5 0"/>
            <Button Grid.Column="2" Name="CreateBucketButton" Content="Create Bucket" FontSize="20" Height="40" Width="200" Margin="0 0 50 0"/>
        </Grid>
    </Grid>
</Window>
